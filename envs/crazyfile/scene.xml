<mujoco model="CF2 scene">
  <include file="cf2.xml"/>

  <statistic center="0 0 0.1" extent="0.2" meansize=".05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-20" elevation="-20" ellipsoidinertia="true"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <!-- 添加障碍物材质 -->
    <material name="obstacle_red" rgba="0.8 0.2 0.2 1"/>
    <material name="obstacle_green" rgba="0.2 0.8 0.2 1"/>
    <material name="obstacle_blue" rgba="0.2 0.2 0.8 1"/>
    <material name="obstacle_yellow" rgba="0.9 0.9 0.2 1"/>
    <material name="obstacle_purple" rgba="0.6 0.2 0.8 1"/>
  </asset>

  <worldbody>
    <camera name="world_camera" pos="0.560 -0.687 0.744" xyaxes="0.872 0.489 -0.000 -0.260 0.465 0.846"/>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- 障碍物1: 小立方体 (与cf2尺寸相近) -->
    <body name="obstacle_cube1" pos="0.5 0 0.06">
        <geom type="box" size="0.04 0.04 0.06" material="obstacle_red"/>
    </body>

    <!-- 障碍物2: 细柱体 -->
    <body name="obstacle_cylinder1" pos="0 0.5 0.08">
        <geom type="cylinder" size="0.02 0.08" material="obstacle_green"/>
    </body>

    <!-- 障碍物3: 小圆球 -->
    <body name="obstacle_sphere1" pos="-0.5 0 0.05">
        <geom type="sphere" size="0.05" material="obstacle_blue"/>
    </body>

    <!-- 障碍物4: 小胶囊体 -->
    <body name="obstacle_capsule1" pos="0 -0.5 0.06">
        <geom type="capsule" size="0.02 0.05" material="obstacle_yellow"/>
    </body>

    <!-- 障碍物5: 扁立方体 (类似墙) -->
    <body name="obstacle_wall1" pos="0.3 0.3 0.1">
        <geom type="box" size="0.02 0.1 0.08" material="obstacle_purple"/>
    </body>

    <!-- 障碍物6: 中等圆柱 (类似柱子) -->
    <body name="obstacle_pillar1" pos="-0.3 -0.3 0.12">
        <geom type="cylinder" size="0.03 0.12" material="obstacle_red"/>
    </body>

    <!-- 障碍物7: 小立方体2 -->
    <body name="obstacle_cube2" pos="0.7 0.2 0.05">
        <geom type="box" size="0.03 0.03 0.05" material="obstacle_green"/>
    </body>

    <!-- 障碍物8: 低矮方块 -->
    <body name="obstacle_lowbox" pos="-0.2 0.7 0.03">
        <geom type="box" size="0.06 0.06 0.03" material="obstacle_blue"/>
    </body>

    <!-- 障碍物9: 中等球体 -->
    <body name="obstacle_sphere2" pos="0.2 -0.7 0.06">
        <geom type="sphere" size="0.04" material="obstacle_yellow"/>
    </body>

    <!-- 障碍物10: 细长柱体 -->
    <body name="obstacle_tallpillar" pos="-0.7 0.5 0.15">
        <geom type="cylinder" size="0.015 0.15" material="obstacle_purple"/>
    </body>
  </worldbody>
</mujoco>